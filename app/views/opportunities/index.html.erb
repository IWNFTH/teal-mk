<%= render "shared/header" %>
<div class='main'>
  <div class="op-index">
    <div class="row">
      <div class="post-btn">
        <button type="button" class="btn-orange" data-bs-toggle="modal" data-bs-target="#exampleModal">新規案件投稿</button>
      </div>
      <div class="opportunities">
        <%= render 'opportunities', opportunities: @opportunities %>
      </div>
    </div>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">新規案件投稿</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_for @opportunity, remote: true do |f| %>
          <div class="modal-body">

            <div class="op-post">
              <div class="form-groupe col-6">
                <%= f.label :op_name, "案件名" %>
                <%= f.text_field :op_name, class: "form_control" %>
              </div>
              <div class="form-groupe col-6">
                <%= f.label :op_name, "会社名" %>
                <%= f.text_field :company, class: "form_control" %>
              </div>
            </div>

            <div class="op-post">
              <div class="form-groupe col-6">
                <div class="select-box"><%= f.label :op_name, "エリア" %></div>
                <div class="select-box"><%= f.collection_select(:company_area_id, CompanyArea.all, :id, :name, {}, {class: "form_control", id:"company-area"}) %></div>
              </div>
              <div class="form-groupe col-6">
                <%= f.label :op_name, "先方担当者名" %>
                <%= f.text_field :person_in_charge, class: "form_control" %>
              </div>
            </div>

            <div class="op-post">
              <div class="form-groupe col-6">
                <%= f.label :op_name, "商品情報取得日" %>
                <%= f.date_field :date_of_obtaining, class: "form_control" %>
              </div>
              <div class="form-groupe col-6">
                <div class="select-box"><%= f.label :op_name, "フェーズ" %></div>
                <div class="select-box"><%= f.collection_select(:phase_id, Phase.all, :id, :name, {}, {class: "form_control", id:"phase"}) %></div>
              </div>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
