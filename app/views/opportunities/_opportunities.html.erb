<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">案件名</th>
      <th scope="col">会社名</th>
      <th scope="col">エリア</th>
      <th scope="col">担当者</th>
      <th scope="col">フェーズ</th>
    </tr>
  </thead>

  <% opportunities.each do |o| %>
    <%= link_to edit_opportunity_path(o.id) do %>
      <tbody>
        <tr>
          <th scope="row"><%= o.id %></th>
          <td onclick='window.location="<%= edit_opportunity_path(o.id) %>"' role="link" class="table-link"><%= o.op_name %></td>
          <td><%= o.company %></td>
          <td onclick='window.location="<%= edit_opportunity_path(o.id) %>"' role="link" class="table-link"><%= o.company_area.name %></td>
          <td onclick='window.location="<%= edit_opportunity_path(o.id) %>"' role="link" class="table-link"><%= o.user.name %></td>
          <td><%= o.phase.name %></td>
        </tr>
      </tbody>
    <% end %>
  <% end %>
</table>